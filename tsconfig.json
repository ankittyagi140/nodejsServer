{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node"       // Use node module resolution
  },
 "include": ["src/**/*.ts", "src/express.d.ts"],
  "exclude": ["node_modules"]
}
